<view style="padding-top:20rpx;"><block wx:for="{{cardList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="card"><view class="card-item"><block wx:if="{{!item.isBack}}"><view class="item-left"><view class="left-title">{{item.title}}</view></view></block><block wx:if="{{!item.isBack}}"><view class="item-center"><view class="center-img"><image mode="aspectFill" src="{{item.src}}"></image></view><view class="center-title">有效期:<text style="margin-left:10rpx;">{{item.time}}</text></view></view></block><block wx:if="{{!item.isBack}}"><view class="item-right"><view class="right-top">{{item.tip}}</view><view class="{{['item-footer',item.isTrue?'select':'selects']}}">{{item.isTrue?"已使用":"未使用"}}</view></view></block><view class="item-posone"><image mode="aspectFill" src="/static/love.png"></image><view class="posone-title">{{item.tips}}</view></view><block wx:if="{{!item.isBack}}"><view class="item-postwo"><image mode="aspectFill" src="/static/juan.png"></image></view></block><view data-event-opts="{{[['tap',[['clickBack',[index]]]]]}}" class="item-icon" bindtap="__e"><image mode="aspectFill" src="/static/mb-rotate.svg"></image></view><block wx:if="{{item.isBack}}"><view class="item-content">{{''+item.content+''}}</view></block></view></view></block></view>